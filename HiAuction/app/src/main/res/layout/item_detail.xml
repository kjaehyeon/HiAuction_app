<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/toolbar_edge">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="상품 상세페이지"
                android:textColor="@color/toolbar"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_below="@id/toolbar"
        android:id="@+id/Itemimage"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/default_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RelativeLayout
        android:layout_below="@id/Itemimage"
        android:id="@+id/sellerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/user_icon"/>

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/userIcon"
            android:orientation="vertical">


            <TextView
                android:id="@+id/S_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="옥션이1"
                android:textSize="17dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/S_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대구 북구 산격동"/>
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/star" />


            <TextView
                android:baselineAligned="true"
                android:id="@+id/S_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.7"
                android:textSize="25dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_below="@id/sellerInfo"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:visibility="visible" />
    <LinearLayout
        android:id="@+id/itemInfo"
        android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/Item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XBox"
                android:textSize="28dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/itemDate"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2021-12-05"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/Item_des"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="17dp"
            android:text="한 번 쓴 XBox 팔아요." />
    </LinearLayout>

    <LinearLayout
        android:layout_above="@id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="10dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/Imprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:text="즉시구매가 238,000"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="|"/>
        <TextView
            android:id="@+id/Bidprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="현재입찰가 199,000"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white">
        <Button
            android:id="@+id/Imbuy"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:textSize="20dp"
            android:backgroundTint="@color/itemExpired"
            android:text="즉시구매" />

        <Button
            android:id="@+id/Imbid"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:textSize="20dp"
            android:backgroundTint="@color/bidFinish"
            android:text="입찰하기" />
    </LinearLayout>

</RelativeLayout>