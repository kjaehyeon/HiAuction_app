<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/toolbar_edge">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="상품 등록"
                android:textColor="@color/toolbar"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="5"
        android:backgroundTint="@color/white">
        <ImageButton
            android:id="@+id/btnCategory1"
            android:layout_width="135dp"
            android:layout_height="110dp"
            android:layout_column="0"
            android:layout_row="0"
            android:backgroundTint="@color/white"
            android:src="@drawable/btn1" />
        <ImageButton
            android:id="@+id/btnCategory2"
            android:layout_width="135dp"
            android:layout_height="110dp"
            android:layout_column="1"
            android:layout_row="0"
            android:backgroundTint="@color/white"
            android:src="@drawable/btn2" />
        <ImageButton
            android:id="@+id/btnCategory3"
            android:layout_width="135dp"
            android:layout_height="110dp"
            android:layout_column="2"
            android:layout_row="0"
            android:backgroundTint="@color/white"
            android:src="@drawable/btn3" />
        <ImageButton
            android:id="@+id/btnCategory4"
            android:layout_width="135dp"
            android:layout_height="110dp"
            android:layout_column="0"
            android:layout_row="1"
            android:backgroundTint="@color/white"
            android:src="@drawable/btn4" />
        <ImageButton
            android:id="@+id/btnCategory5"
            android:layout_width="135dp"
            android:layout_height="110dp"
            android:layout_column="1"
            android:layout_row="1"
            android:backgroundTint="@color/white"
            android:src="@drawable/btn5" />
        <ImageButton
            android:id="@+id/btnCategory6"
            android:layout_width="135dp"
            android:layout_height="110dp"
            android:layout_column="2"
            android:layout_row="1"
            android:backgroundTint="@color/white"
            android:src="@drawable/btn6" />
        <ImageButton
            android:id="@+id/btnCategory7"
            android:layout_width="135dp"
            android:layout_height="110dp"
            android:layout_column="0"
            android:layout_row="2"
            android:backgroundTint="@color/white"
            android:src="@drawable/btn7" />
        <ImageButton
            android:id="@+id/btnCategory8"
            android:layout_width="135dp"
            android:layout_height="110dp"
            android:layout_column="1"
            android:layout_row="2"
            android:backgroundTint="@color/white"
            android:src="@drawable/btn8" />
        <ImageButton
            android:id="@+id/btnCategory9"
            android:layout_width="135dp"
            android:layout_height="110dp"
            android:layout_column="2"
            android:layout_row="2"
            android:backgroundTint="@color/white"
            android:src="@drawable/btn9" />
        <ImageButton
            android:id="@+id/btnCategory10"
            android:layout_width="135dp"
            android:layout_height="110dp"
            android:layout_column="0"
            android:layout_row="3"
            android:backgroundTint="@color/white"
            android:src="@drawable/btn10" />
        <ImageButton
            android:id="@+id/btnCategory11"
            android:layout_width="135dp"
            android:layout_height="110dp"
            android:layout_column="1"
            android:layout_row="3"
            android:backgroundTint="@color/white"
            android:src="@drawable/btn11" />
        <ImageButton
            android:id="@+id/btnCategory12"
            android:layout_width="135dp"
            android:layout_height="110dp"
            android:layout_column="2"
            android:layout_row="3"
            android:backgroundTint="@color/white"
            android:src="@drawable/btn12" />
        <ImageButton
            android:id="@+id/btnCategory13"
            android:layout_width="135dp"
            android:layout_height="110dp"
            android:layout_column="0"
            android:layout_row="4"
            android:backgroundTint="@color/white"
            android:src="@drawable/btn13" />
        <ImageButton
            android:id="@+id/btnCategory14"
            android:layout_width="135dp"
            android:layout_height="110dp"
            android:layout_column="1"
            android:layout_row="4"
            android:backgroundTint="@color/white"
            android:src="@drawable/btn14" />
        <ImageButton
            android:id="@+id/btnCategory15"
            android:layout_width="135dp"
            android:layout_height="110dp"
            android:layout_column="2"
            android:layout_row="4"
            android:backgroundTint="@color/white"
            android:src="@drawable/btn15" />

    </GridLayout>
</LinearLayout>
